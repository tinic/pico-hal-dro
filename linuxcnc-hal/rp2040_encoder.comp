component rp2040_encoder "RP2040 USB quadrature encoder interface";
author "Claude";
license "GPL";

pin out float position-#[4] "Position values from the RP2040 device";
pin out bit connected "True when USB device is connected";
pin in s32 test-mode "Test mode: 0=off, 1=sine wave, 2=circular, 3=linear ramp, 4=random walk";
pin io float scale-#[4] = 1.0 "Scale factor for each encoder (default 1.0)";
pin in bit reset-#[4] "Reset encoder position to zero (rising edge triggered)";

option userspace yes;
option extra_link_args "-lusb-1.0";

;;

#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <libusb-1.0/libusb.h>
#include <string.h>
#include <errno.h>
#include <signal.h>

#define VENDOR_ID 0x2E8A
#define PRODUCT_ID 0xC0DE
#define EP_IN 0x81
#define EP_OUT 0x01

#define VENDOR_REQUEST_GET_POSITION 0x01
#define VENDOR_REQUEST_SET_TEST_MODE 0x02
#define VENDOR_REQUEST_SET_SCALE 0x03
#define VENDOR_REQUEST_GET_SCALE 0x04
#define VENDOR_REQUEST_RESET_ENCODER 0x05

static libusb_device_handle *dev_handle = NULL;
static libusb_context *ctx = NULL;
static int should_exit = 0;
static int last_test_mode = -1;  // Track test mode changes
static double last_scale[4] = {-1.0, -1.0, -1.0, -1.0};  // Track scale changes
static int last_reset[4] = {0, 0, 0, 0};  // Track reset pin states

static void signal_handler(int sig) {
    should_exit = 1;
}

static void cleanup_usb(void) {
    if (dev_handle) {
        libusb_release_interface(dev_handle, 0);
        libusb_close(dev_handle);
    }
    
    if (ctx) {
        libusb_exit(ctx);
    }
}

static int init_usb(void) {
    int r;
    
    // Initialize libusb
    r = libusb_init(&ctx);
    if (r < 0) {
        rtapi_print_msg(RTAPI_MSG_ERR, "rp2040_encoder: Failed to initialize libusb\n");
        return -1;
    }
    
    return 0;
}

void user_mainloop(void) {
    uint8_t buffer[64];
    int actual_length;
    int r;
    static int usb_initialized = 0;
    
    // Initialize USB on first call
    if (!usb_initialized) {
        if (init_usb() < 0) {
            return;
        }
        usb_initialized = 1;
        
        // Set up signal handlers for cleanup
        signal(SIGINT, signal_handler);
        signal(SIGTERM, signal_handler);
    }
    
    while (!should_exit) {
        FOR_ALL_INSTS() {
            // Try to open device if not connected
            if (!dev_handle) {
                dev_handle = libusb_open_device_with_vid_pid(ctx, VENDOR_ID, PRODUCT_ID);
                if (dev_handle) {
                    // Claim interface
                    r = libusb_claim_interface(dev_handle, 0);
                    if (r < 0) {
                        rtapi_print_msg(RTAPI_MSG_ERR, "rp2040_encoder: Failed to claim interface\n");
                        libusb_close(dev_handle);
                        dev_handle = NULL;
                    } else {
                        connected = 1;
                        
                        // Read initial scale factors from device
                        buffer[0] = VENDOR_REQUEST_GET_SCALE;
                        r = libusb_bulk_transfer(dev_handle, EP_OUT, buffer, 1, &actual_length, 0);
                        if (r == 0) {
                            // Read scale response
                            r = libusb_bulk_transfer(dev_handle, EP_IN, buffer, 64, &actual_length, 0);
                            if (r == 0 && actual_length >= 32) {
                                // Parse scale data
                                double *scales = (double*)buffer;
                                for (int i = 0; i < 4; i++) {
                                    scale(i) = scales[i];
                                    last_scale[i] = scales[i];
                                }
                            }
                        }
                    }
                } else {
                    connected = 0;
                }
            }
            
            // Request and read position data if connected
            if (dev_handle) {
                // Check for test mode changes
                if (test_mode != last_test_mode && test_mode >= 0 && test_mode <= 4) {
                    buffer[0] = VENDOR_REQUEST_SET_TEST_MODE;
                    buffer[1] = test_mode;  // 0=off, 1-4=test patterns
                    r = libusb_bulk_transfer(dev_handle, EP_OUT, buffer, 2, &actual_length, 0);
                    if (r == 0) {
                        last_test_mode = test_mode;
                    }
                }
                
                // Check for scale factor changes
                for (int i = 0; i < 4; i++) {
                    if (scale(i) != last_scale[i]) {
                        buffer[0] = VENDOR_REQUEST_SET_SCALE;
                        buffer[1] = i;  // Encoder index
                        memcpy(&buffer[2], &scale(i), sizeof(double));
                        r = libusb_bulk_transfer(dev_handle, EP_OUT, buffer, 10, &actual_length, 0);
                        if (r == 0) {
                            last_scale[i] = scale(i);
                        }
                    }
                }
                
                // Check for reset pin rising edges
                for (int i = 0; i < 4; i++) {
                    if (reset(i) && !last_reset[i]) {
                        // Rising edge detected - send reset command
                        buffer[0] = VENDOR_REQUEST_RESET_ENCODER;
                        buffer[1] = i;  // Encoder index
                        r = libusb_bulk_transfer(dev_handle, EP_OUT, buffer, 2, &actual_length, 0);
                    }
                    last_reset[i] = reset(i);
                }
                
                // Send position request
                buffer[0] = VENDOR_REQUEST_GET_POSITION;
                r = libusb_bulk_transfer(dev_handle, EP_OUT, buffer, 1, &actual_length, 0);
                if (r == 0) {
                    // Read position response
                    r = libusb_bulk_transfer(dev_handle, EP_IN, buffer, 64, &actual_length, 0);
                    if (r == 0 && actual_length >= 32) {
                        // Parse position data
                        double *positions = (double*)buffer;
                        position(0) = positions[0];
                        position(1) = positions[1];
                        position(2) = positions[2];
                        position(3) = positions[3];
                    } else if (r == LIBUSB_ERROR_TIMEOUT) {
                        // No response yet, continue with last known positions
                    } else if (r == LIBUSB_ERROR_NO_DEVICE || r == LIBUSB_ERROR_IO) {
                        // Device disconnected
                        libusb_close(dev_handle);
                        dev_handle = NULL;
                        connected = 0;
                    }
                } else if (r == LIBUSB_ERROR_TIMEOUT) {
                    // Request timeout, continue
                } else if (r == LIBUSB_ERROR_NO_DEVICE || r == LIBUSB_ERROR_IO) {
                    // Device disconnected
                    libusb_close(dev_handle);
                    dev_handle = NULL;
                    connected = 0;
                }
            }
        }
        
        usleep(10); // 10Î¼s sleep
    }
    
    // Clean up on exit
    cleanup_usb();
}